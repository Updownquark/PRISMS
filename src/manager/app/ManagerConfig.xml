<?xml version="1.0" encoding="UTF-8" ?>

<application>
	<name>MANAGER</name>
	<description>Allows management of PRISMS users, applications, permissions, etc.</description>
	<config-class>prisms.arch.AppConfig</config-class>
	<version>1.4.0</version>
	<modified>28Oct2010</modified>
	<worker>
		<type>threadpool</type>
	</worker>
	<properties>
		<property type="prisms.util.persisters.CommonValueManager">
			<field>manager.app.ManagerProperties.users</field>
			<persister>
				<class>manager.persisters.UserPersister</class>
			</persister>
			<changeEvent>
				<name>prismsUserChanged</name>
				<eventProperty>user</eventProperty>
			</changeEvent>
		</property>
	</properties>
	<events>
		<event>
			<name>userPermissionsChanged</name>
			<class>prisms.util.EventGlobalizer</class>
		</event>
		<event>
			<name>groupChanged</name>
			<class>prisms.util.EventGlobalizer</class>
		</event>
		<event>
			<name>appGroupsChanged</name>
			<class>prisms.util.EventGlobalizer</class>
		</event>
		<event>
			<name>groupPermissionsChanged</name>
			<class>prisms.util.EventGlobalizer</class>
		</event>
		<event>
			<name>userGroupsChanged</name>
			<class>prisms.util.EventGlobalizer</class>
		</event>
	</events>
	<monitors>
	</monitors>
	<clients>
		<client configXML="ManagerClientConfig.xml"/>
	</clients>
	<permissions>
		<permission>
			<name>createUser</name>
			<description>Allows users to create new users</description>
		</permission>
		<permission>
			<name>userAdmin</name>
			<description>Allows users to administrate other users</description>
		</permission>
		<permission>
			<name>createGroup</name>
			<description>Allows users to create new groups</description>
		</permission>
	</permissions>
</application>
